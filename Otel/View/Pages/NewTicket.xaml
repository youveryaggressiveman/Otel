<Page x:Class="Otel.View.Pages.NewTicket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Otel.View.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="1000"
      Title="NewTicket"
      FontFamily="/Otel;component/Resources/Fonts/#Zen Kaku Gothic New">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="75" />
                <RowDefinition Height="75" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />

            </Grid.ColumnDefinitions>
            <Label Content=" Выберите страну: "
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="15" />
            <Label Content=" Выберите отель: "
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="15"
                   Grid.Row="1" />
            <ComboBox  Style="{StaticResource RoundComboBox}"
                       ItemContainerStyle="{StaticResource RoundComboBoxItem}"
                       Grid.Column="1"
                       x:Name="CountryBox">
            </ComboBox>
            <ComboBox Grid.Row="1"
                      x:Name="NameOtelBox"
                      Style="{StaticResource RoundComboBox}"
                      ItemContainerStyle="{StaticResource RoundComboBoxItem}"
                      Grid.Column="1">
            </ComboBox>
            <Image Grid.Row="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Margin="20" />
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="75" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="50" />
                <RowDefinition Height="75" />
                <RowDefinition Height="75" />
                <RowDefinition Height="75" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Content="Информация о билете:"
                   FontSize="30"
                   VerticalContentAlignment="Center"
                   HorizontalAlignment="Center" />
            <Label Grid.Row="1"
                   Content="Тип номера:"
                   FontSize="15"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center" />
            <ComboBox Grid.Row="1"
                      Grid.Column="1"
                      Grid.ColumnSpan="2"
                      x:Name="TypeRoomBox"
                      Style="{StaticResource RoundComboBox}"
                      ItemContainerStyle="{StaticResource RoundComboBoxItem}" />
            <Label Content="Дата заезда:"
                   Grid.Row="2"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="15" />
            <DatePicker Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="8"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center" />
            <Label Content="Дата отъезда:"
                   Grid.Row="2"
                   Grid.Column="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="15" />
            <DatePicker Grid.Row="3"
                        Grid.Column="2"
                        HorizontalContentAlignment="Center"
                        Margin="8"
                        VerticalContentAlignment="Center" />
            <Label Grid.Row="4"
                   Content="Количество номеров:"
                   FontSize="15"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center" />
            <TextBox Grid.Row="4"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Margin="20"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius"
                                Value="8" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label Content=" Сумма к оплате: "
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontSize="15"
                   Grid.Row="5" />
            <Label Content=" 0 "
                   HorizontalContentAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="15"
                   Grid.Row="5"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"/>
            <Button Grid.Row="6"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="8"
                    Background="#DBE4EB"
                    Content="Оформить">
            </Button>


        </Grid>
    </Grid>
</Page>
