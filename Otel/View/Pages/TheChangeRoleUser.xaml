<Page x:Class="Otel.View.Pages.TheChangeRoleUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Otel.View.Pages"
      mc:Ignorable="d"
      d:DesignHeight="750"
      d:DesignWidth="1050"
      Title="TheChangeRoleUser"
      FontFamily="/Otel;component/Resources/Fonts/#Zen Kaku Gothic New">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="Режим администратора: Изменение ролей"
                   Margin="20 0 0 0"
                   FontSize="40"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Label Content="Список пользователей"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       FontSize="42"
                       VerticalContentAlignment="Center"
                       HorizontalAlignment="Center" />
                <ListView Grid.Row="1"
                          Margin="20"
                          SelectedItem="{Binding SelectedUser}"
                          ItemsSource="{Binding UserList}"
                          Foreground="#5f6368"
                          Width="430"
                          Height="410"
                          FontSize="20"
                          Background="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                            <Run Text="Пользователь(ФИ): " />
                            <Run Text="{Binding SecondName}" />
                            <Run Text=" " />
                            <Run Text="{Binding FirstName}" />  
                            <Run Text="," />
                                <LineBreak />
                                <Run Text="Роль:" />
                                <Run Text="{Binding Role.Name}" />
                                <Run Text="." />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius"
                                    Value="8" />
                        </Style>
                    </ListView.Resources>
                </ListView>
                <Button Grid.Row="2" 
                        Content="Посмотреть подробную информацию"
                        Command="{Binding ViewSelectedUser}"/>
            </Grid>
            <Border BorderBrush="#5f6368"
                    BorderThickness="1"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Height="650"
                    VerticalAlignment="Top"
                    Width="1"
                    Margin="50,0,0,0" />
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="75" />
                    <RowDefinition Height="75" />
                    <RowDefinition Height="75" />
                    <RowDefinition Height="75" />
                    <RowDefinition Height="75" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Label Content="Подробная информация"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       FontSize="42"
                       VerticalContentAlignment="Center"
                       HorizontalAlignment="Center" />
                <TextBox Grid.Row="1"
                         Text="{Binding FIO}"
                         Width="250"
                         Background="Transparent"
                         IsEnabled="False"
                         FontSize="18"
                         Grid.Column="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center" />
                <Label Grid.Row="1"
                       Content="ФИО:"
                       FontSize="15"
                       Margin="20 0 0 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" />
                <TextBox Grid.Row="2"
                         Text="{Binding Phone}"
                         Width="250"
                         Background="Transparent"
                         IsEnabled="False"
                         FontSize="18"
                         Grid.Column="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center" />
                <Label Grid.Row="2"
                       Content="Телефон:"
                       FontSize="15"
                       Margin="20 0 0 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" />
                <TextBox Grid.Row="3"
                         Text="{Binding Country}"
                         Width="250"
                         Background="Transparent"
                         IsEnabled="False"
                         FontSize="18"
                         Grid.Column="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center" />
                <Label Grid.Row="3"
                       Content="Страна:"
                       FontSize="15"
                       Margin="20 0 0 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" />
                <TextBox Grid.Row="4"
                         Text="{Binding Role}"
                         Width="250"
                         Background="Transparent"
                         IsEnabled="False"
                         FontSize="18"
                         Grid.Column="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center" />
                <Label Grid.Row="4"
                       Content="Роль:"
                       FontSize="15"
                       Margin="20 0 0 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" />
                <StackPanel Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal">
                    <Label Grid.Row="3"
                           Content="Серия "
                           FontSize="15"
                           Margin="20 0 0 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />
                    <TextBox Background="Transparent"
                             Width="100"
                             IsEnabled="False"
                             Text="{Binding SerialPassport}"
                             FontSize="15"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Margin="0,23" />
                    <Label Grid.Row="3"
                           Content=" и номер "
                           FontSize="15"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />
                    <TextBox Background="Transparent"
                             Width="100"
                             IsEnabled="False"
                             Text="{Binding NumberPassport}"
                             FontSize="15"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Margin="0,23" />
                    <Label Grid.Row="3"
                           Content=" паспорта "
                           FontSize="15"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />
                </StackPanel>
                <Label Grid.Row="6"
                       Content="Роль для изменения:"
                       FontSize="15"
                       Margin="20 0 0 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" />
                <ComboBox Grid.Row="6"
                          Grid.Column="1"
                          Width="250"
                          x:Name="TypeRoomBox"
                          ItemsSource="{Binding RoleList}"
                          SelectedIndex="0"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding SelectedRole}"
                          Style="{StaticResource RoundComboBox}"
                          ItemContainerStyle="{StaticResource RoundComboBoxItem}" />
                <Button Grid.Row="7"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Content="Обновить роль у выбранного клиента"
                        Command="{Binding UpdateRoleBySelectedUser}" />
            </Grid>
        </Grid>
    </Grid>
</Page>
