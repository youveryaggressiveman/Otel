<Window x:Class="Otel.View.Windows.InputCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Otel.View.Windows"
        FontFamily="/Otel;component/Resources/Fonts/#Zen Kaku Gothic New"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Hotel City: Платежные реквизиты" Height="550" Width="550"
        MinHeight="550"
        MinWidth="550"
        MaxHeight="550"
        MaxWidth="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Label Style="{StaticResource headerLabel}"
                   Content="🌴 | Hotel City"
                   FontSize="50"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="75" />
                <RowDefinition Height="75" />
                <RowDefinition Height="75" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Content="Платежные реквизиты"
                   FontSize="40"
                   Margin="20 0 0 0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
            <Label Grid.Row="1"
                   Margin="10 0 0 0"
                   Content="Номер карты:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Width="250"
                     Style="{StaticResource numberOfCardTextBox}"
                     Margin="20"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"/>
            <Label Grid.Row="2"
                   Margin="10 0 0 0"
                   Content="Срок действия:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Grid.Row="2"
                        Grid.Column="1">
                <TextBox VerticalContentAlignment="Center"
                         Style="{StaticResource monthOfCardTextBox}"
                         HorizontalContentAlignment="Left"
                         Width="40"/>
                <Label Content="/" 
                       Margin="5 0 0 0"/>
                <TextBox VerticalContentAlignment="Center"
                         Style="{StaticResource yearrOfCardTextBox}"
                         Margin=" 5 0 0 0"
                         HorizontalContentAlignment="Left"
                         Width="40" />
            </StackPanel>
            <Label Grid.Row="3"
                   Content="CVC/CVV:"
                   Margin="10 0 0 0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
            <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Margin="20"
                         Width="100"
                         x:Name="pswBox"
                         VerticalContentAlignment="Center"
                     Style="{StaticResource CVCOfCardTextBox}"
                         HorizontalContentAlignment="Left" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="Отмена"
                    x:Name="cancelButton"
                    Click="cancelButton_Click" />
            <Button Content="Занести реквизиты" 
                    Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
