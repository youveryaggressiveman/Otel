<Window x:Class="Otel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Otel"
        mc:Ignorable="d"
        FontFamily="/Otel;component/Resources/Fonts/#Zen Kaku Gothic New"
        Title="Главное окно: резирвирование номеров"
        MinHeight="650"
        MinWidth="1050"
        Height="650"
        Width="1050"
        Icon="/Otel;component/Resources/Image/baseline_luggage_black_48dp.png"
        Background="White"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Label Content="Hotel City"
                   Grid.Column="1"
                   FontSize="50"
                   HorizontalAlignment="Center"
                   VerticalContentAlignment="Center" />
            <Image Grid.Column="0"
                   Source="/Otel;component/Resources/Image/baseline_luggage_black_48dp.png" />
            <Button Grid.Column="2"
                    IsEnabled="False"
                    Content=" Ваши билеты ">
            </Button>
            <Button Grid.Column="3"
                    Content=" Зарегистрироваться ">

            </Button>
            <Button x:Name="ComeButton" Grid.Column="4"
                    Content="    Войти    "
                    Click="ComeButton_Click">

            </Button>
        </Grid>
        <Frame Grid.Row="1"
               Grid.Column="0" 
               x:Name="Main"/>

    </Grid>
</Window>
